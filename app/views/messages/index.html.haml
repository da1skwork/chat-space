.contents
  .side-bar
    = render "layouts/shared/side_bar"

  .main-contents
    .chat-header
      .chat-group
        %p.chat-group__name グループ名
        %p.chat-group__members Members: member1 member2 member3
      = link_to "Edit", '#'

    .group-messages
      %ul
        %li.message-list
          %p.message-list__username username
          %p.message-list__date 2017/01/01 00:00:00
          %p.message-list__comment コメント
        %li.message-list
          %p.message-list__username username
          %p.message-list__date 2017/01/01 00:00:00
          %p.message-list__comment コメント


    .post-message
      %form.post-form
        %input.post-form__text{type: "text", placeholder: "type a message"}
        %label.post-image
          %i.fa.fa-picture-o
          %input.post-image__btn{type: "file"}
        %input.post-form__send{type: "submit", value: "Send"}
